
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
 
>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" 
    >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/history_textviews_style"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="MissingDimension"
                >
                    <TextView
                        android:text="Client"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:textStyle="bold"
                        android:layout_weight="35"
                    />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_height="wrap_content"
                    >
                        <TextView
                            android:text="Cient's name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/HistoryClientName"
                            android:textStyle="bold"
            
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/history_textviews_style"
                android:layout_marginTop="3dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="MissingDimension"
                >
                    <TextView
                        android:text="Pickup Location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:textStyle="bold"
                        android:layout_weight="35"
                    />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_height="wrap_content"
                    >
                        <TextView
                            android:text="Pickup Location"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/HistoryPickupLocation"
                            android:textStyle="bold"
            
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/history_textviews_style"
                android:layout_marginTop="3dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="MissingDimension"
                >
                    <TextView
                        android:text="Destination"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:textStyle="bold"
                        android:layout_weight="35"
                    />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_height="wrap_content"
                    >
                        <TextView
                            android:text="Destination"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/HistoryDestination"
                            android:textStyle="bold"
            
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/history_textviews_style"
                android:layout_marginTop="3dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"  
                    tools:ignore="MissingDimension"
                >
                    <TextView
                        android:text="Distance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:textStyle="bold"
                        android:layout_weight="35"
                    />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_height="wrap_content"
                    >
                        <TextView
                            android:text="Distance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/HistoryDistance"
                            android:textStyle="bold"
            
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/history_textviews_style"
                android:layout_marginTop="3dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="MissingDimension"
                >
                    <TextView
                        android:text="Price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:textStyle="bold"
                        android:layout_weight="35"
                    />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_height="wrap_content"
                    >
                        <TextView
                            android:text="Price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/HistoryPrice"
                            android:textStyle="bold"
            
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/history_textviews_style"
                android:layout_marginTop="3dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="MissingDimension"
                >
                    <TextView
                        android:text="Delivery Status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:textStyle="bold"
                        android:layout_weight="35"
                    />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="65"
                        android:layout_height="wrap_content"
                    >
                        <TextView
                            android:text="Status"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/HistoryRequestStatus"
                            android:textStyle="bold"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        
        </LinearLayout>
   
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
    >
        <View
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="3dp"
            android:id="@+id/view1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/HistoryRequestDatesTimeCreated"
            android:layout_centerVertical="true"
        />
        <TextView
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/HistoryRequestDatesTimeCreated" />
        <View
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/HistoryRequestDatesTimeCreated"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:id="@+id/view2" />

    
    </RelativeLayout>
   </LinearLayout>
</com.google.android.material.card.MaterialCardView>