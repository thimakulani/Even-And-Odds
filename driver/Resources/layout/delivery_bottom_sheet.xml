<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_delivery_request"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:padding="3dp"
    android:background="@android:color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="UselessParent"
        
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
        >
            <TextView
                android:text="From"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/textView1"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestFromName"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
         >
            <TextView
                android:text="Contact No"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestFromContact"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
        >
            <TextView
                android:text="Alternative Numbers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestFromAltNr"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_blue_grey_950"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
        >
            <TextView
                android:text="To"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestToName"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
        >
            <TextView
                android:text="Contact No"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestToContact"
                    android:textStyle="bold"
            
                />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_blue_grey_950"
         />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
         >
            <TextView
                android:text="Item Type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestItemType"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingDimension"
            android:weightSum="100"
         >
            <TextView
                android:text="Pickup location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestPickupLication"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingDimension"
            android:weightSum="100"
         >
            <TextView
                android:text="Destination"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestDestination"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingDimension"
            android:weightSum="100"
         >
            <TextView
                android:text="Distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestDistance"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingDimension"
            android:weightSum="100"
         >
            <TextView
                android:text="Price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestPrice"
                    android:textStyle="bold"
            
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="MissingDimension"
        >
            <TextView
                android:text="Status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textStyle="bold"
                android:layout_weight="35"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/txtRequestStatus"
                    android:textStyle="bold"
            
                />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:text="Accept Request"
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:textColor="#fff"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:id="@+id/BtnAcceptRequest"
        />
    </LinearLayout>

</LinearLayout>