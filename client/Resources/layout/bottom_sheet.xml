
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:padding="15dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        tools:ignore="PossiblyUselessParentWithBackground"
    >

        <ImageView
            android:src="@drawable/delivery_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView1"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription" 
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:id="@+id/view1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/imageView1"
        />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:minHeight="25px"
            android:text="Distance"
            android:textStyle="bold"
            android:layout_below="@+id/view1"
            
        />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:minHeight="25px"
            android:textStyle="bold"
            android:id="@+id/TxtDistance"
            android:layout_below="@+id/view1"
            
        />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:text="Price"
            android:minHeight="25px"
            android:textStyle="bold"
            android:layout_below="@+id/TxtDistance"
            
        />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:minHeight="25px"
            android:id="@+id/TxtPrice"
            android:layout_below="@+id/TxtDistance"
        />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:text="Estimated Duration"
            android:minHeight="25px"
            android:id="@+id/Duration_Caption"
            android:textStyle="bold"
            android:layout_below="@+id/TxtPrice"
            
        />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:minHeight="25px"
            android:id="@+id/TxtDuration"
            android:layout_below="@+id/TxtPrice"
        />
        <com.google.android.material.button.MaterialButton
            android:text="Continue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnContinueRequest"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/TxtDuration"
            app:strokeColor="@color/quantum_white_100"
            app:strokeWidth="2dp"
        
        />
    </RelativeLayout>

</LinearLayout>