
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>   
   
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
    >
        <ImageView
            android:src="?android:attr/homeAsUpIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImgClosePascelDialog"
            android:tint="#ffffff"
            android:layout_centerVertical="true"
        />
        <TextView
            android:text="Delivery Information"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_centerHorizontal="true"
        />

    </RelativeLayout>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:layout_margin="10dp"
    >
        <LinearLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout2"
            android:orientation="vertical"
        >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelFullnames"
                    android:hint="Names"
                    android:textColorHint="#220438"
                    android:textColor="#220438"          
                />
            </com.google.android.material.textfield.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelSurname"
                    android:background="@drawable/pascel_input_style"
                    android:hint="Surname"
                    android:textColorHint="#220438"
                    android:textColor="#220438"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/InputPacelFullnames"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelContact"
                    android:background="@drawable/pascel_input_style"
                    android:hint="Contact no"
                    android:textColorHint="#220438"
                    android:textColor="#220438"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/InputPacelSurname"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelAltContact"
                    android:background="@drawable/pascel_input_style"
                    android:hint="Alternative contact no"
                    android:textColorHint="#220438"
                    android:textColor="#220438"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/InputPacelContact"
                />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/view1"
                android:background="#000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/InputPacelAltContact"
                
            />
            <TextView
                android:text="Parcel and deliver to"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/view1"
                android:textStyle="bold"
            />
            
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelItemType"
                    android:background="@drawable/pascel_input_style"
                    android:hint="Item type"
                    android:textColorHint="#220438"
                    android:textColor="#220438"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/textView2"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelPickupLocation"
                    android:background="@drawable/pascel_input_style"
                    android:hint="Pickup location"
                    android:textColorHint="#220438"
                    android:textColor="#220438"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/InputPacelItemType"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:id="@+id/InputPacelDestination"
                    android:background="@drawable/pascel_input_style"
                    android:hint="Destination"
                    android:textColorHint="#220438"
                    android:textColor="#220438"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@+id/InputPacelPickupLocation"
                />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:text="Select a pickup date and time"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView3"
                android:layout_below="@+id/InputPacelDestination"
            />
            <Button
                android:text="Pickup Date"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/BtnPicupDate"
                android:layout_below="@+id/textView3"
                android:textColor="#ffffff"
                android:background="@drawable/button_style"
            />
             <Button
                android:text="Pickup Time"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:id="@+id/BtnPicupTime"
                android:layout_below="@+id/textView3"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_style"
            />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/InputPacelPersonN"
                    android:hint="Person name"
                    android:textColor="#220438"
                    android:textColorHint="#220438"
                    android:background="@drawable/pascel_input_style"
                    android:textStyle="bold"
                    android:layout_below="@+id/BtnPicupDate"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
                <EditText
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/InputPacelPersonContacts"
                    android:hint="Person contact number"
                    android:layout_marginTop="5dp"
                    android:textColor="#220438"
                    android:textColorHint="#220438"
                    android:background="@drawable/pascel_input_style"
                    android:textStyle="bold"
                    android:layout_below="@+id/InputPacelPersonN"
                />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:text="Payment method"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPaymentMethod"
                android:layout_marginTop="3dp"
                android:textColor="#9c4444"
                android:visibility="gone"
                android:layout_below="@+id/InputPacelPersonContacts"
                android:textStyle="bold"
            />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RdgPaymentMethod"
                android:layout_below="@+id/txtPaymentMethod"
                
            >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Cash"
                    android:id="@+id/RdbCash"
                    android:textStyle="bold"
                    android:textColor="#2e7dd9"
                />
                <RadioButton
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:id="@+id/RdbOnline"
                    android:textStyle="bold"
                    android:textColor="#220438"
                    
                />
            </RadioGroup>
            <android.support.design.button.MaterialButton
                android:text="Proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:id="@+id/BtnSubmitDeliveryRequest"
                android:layout_below="@+id/RdgPaymentMethod"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>