
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3498db"
        android:elevation="0dp"
        android:id="@+id/relativeLayout1"
    >
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Your Query"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:id="@+id/TChatsStudentName"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
        />
        
        
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="5dp"
        android:id="@+id/TRecyclerChatMessage"
        android:scrollbars="vertical"
         android:layout_above="@+id/bottom_wrapper"
        android:layout_marginBottom="5dp"    
    />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:orientation="horizontal"
         android:id="@+id/bottom_wrapper"
     >
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2" 
        >

            <android.support.design.widget.TextInputLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout1" 
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_toLeftOf="@+id/TBtnSendMessage"
                
            >
      
                 <EditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Message here"
                     android:layout_marginTop="5dp"
                     android:layout_marginBottom="5dp"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="5dp"
             
                     android:inputType="textMultiLine"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:textColorHint="#ffff"
                     android:id="@+id/TInputMessage"
                     android:textColor="#ffff"
                 />
            </android.support.design.widget.TextInputLayout>
             <android.support.design.widget.FloatingActionButton
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:layout_marginBottom="5dp"
                 android:layout_marginRight="5dp"
                 app:fabSize="mini"
                 android:src="@android:drawable/ic_menu_send"
                 android:id="@+id/TBtnSendMessage"
                 android:layout_alignParentRight="true"
             />
          </RelativeLayout>
    </LinearLayout>

</RelativeLayout>