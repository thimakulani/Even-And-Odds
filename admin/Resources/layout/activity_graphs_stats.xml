<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
   <com.google.android.material.appbar.AppBarLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
   >
       <include
           layout="@layout/include_toolbar"
       />
   </com.google.android.material.appbar.AppBarLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:text="Stats"
   />

   <View
       android:layout_width="match_parent"
       android:background="@android:color/black"
       android:layout_height="1dp"
   />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnChartType"
        android:text="Bar Chart"
        app:icon="@mipmap/ic_arrow_drop_down_black_18dp"
        android:drawableLeft="@mipmap/ic_arrow_drop_down_black_18dp"
    />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnYear"
        android:text="Year"
        app:icon="@mipmap/ic_arrow_drop_down_black_18dp"
        android:drawableLeft="@mipmap/ic_arrow_drop_down_black_18dp"
    />
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
   >
       <Microcharts.Droid.ChartView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/chartStats"
       />
       <ProgressBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/loading_stats_progress"
           android:layout_gravity="center"
       />

   </FrameLayout>
</LinearLayout>
