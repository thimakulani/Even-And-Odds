<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    
        
    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FabCloseDirverRegDialog"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        app:fabSize="mini"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Driver"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:id="@+id/textView1"
    />

    
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
    >
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:minWidth="25px"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout1"
        >
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputFirstName"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="First Name"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >   
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputLastName"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="Last Name"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputPhoneNumber"
                    android:inputType="phone"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="Phone number"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >    
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputEmail"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="Email address"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >    
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputRegNo"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="Vehicle Registration No"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >    
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputMake"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="Make or Model"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >    
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RegisterInputColor"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:hint="Colour"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:text="Vehicle Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BtnRegisterCarType"
                style="@android:style/Widget.Material.Light.Button"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_margin="5dp"
            />
            <com.google.android.material.button.MaterialButton
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BtnRegisterDriver"
                style="@android:style/Widget.Material.Light.Button"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_margin="5dp"
            />
        </LinearLayout>
    </ScrollView>




</LinearLayout>
