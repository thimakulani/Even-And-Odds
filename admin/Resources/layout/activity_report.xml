
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 
>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/view1"
        android:background="@color/colorPrimary"
    />
    <ImageView
        android:id="@+id/ImgCloseHistory"
        android:tint="#ffffff"
        android:layout_margin="15dp"
        android:src="?android:attr/homeAsUpIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <TextView
        android:text="Delivery Requests History"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_toRightOf="@+id/ImgCloseHistory"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
    />
    <android.support.design.button.MaterialButton
        android:text="All-Requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:strokeColor="#ffff"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:strokeWidth="2dp"
        app:icon="@android:drawable/arrow_down_float"
        android:id="@+id/RequestsType"
        android:layout_below="@+id/ImgCloseHistory"
    
    />
    
    <android.support.v7.widget.RecyclerView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_below="@+id/RequestsType"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RecyclerHistory"
        android:layout_above="@+id/BtnGenerate"
    />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoadingProgressBar" 
        android:layout_centerInParent="true"
        android:background="@drawable/progressbarstyle"
    />


    <android.support.design.button.MaterialButton
        android:text="Generate Report"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BtnGenerate" 
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_style"
    />


</RelativeLayout>