<selector xmlns:android="http://schemas.android.com/apk/res/android">


  <item android:state_pressed="false">
    <layer-list>
      <item android:right="2dp" android:top="2dp">
        <shape>
          <solid android:color="#ffb13833"/>
          <corners android:radius="10dp" />
        </shape>
      </item>
      <item android:bottom="2dp" android:top="2dp">
        <shape>
          <corners android:radius="10dp" />
          <solid android:color="#ffb13833"/>
          <padding android:bottom="6dp" android:right="6dp" android:left="6dp" android:top="6dp" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:right="2dp" android:top="2dp">
        <shape>
          <solid android:color="#ffb13833"/>

          <corners android:radius="10dp" />
        </shape>
      </item>
      <item android:bottom="2dp" android:top="2dp">
        <shape>
          <corners android:radius="10dp" />
          <padding android:bottom="6dp" android:right="6dp" android:left="6dp" android:top="6dp" />
          <solid android:color="#ffb13833"/>

        </shape>
      </item>
    </layer-list>

  </item>
</selector>